{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "baseUrl": "src",

    "paths": {
      "@qa/core": ["packages/core"],
      "@qa/helper": ["packages/helper"]
    },
    "types": [
      "@wdio/allure-reporter",
      "@wdio/cucumber-framework",
      "wdio-intercept-service",
      "chance",
      "expect-webdriverio",
      "node",
      "otplib",
      "webdriverio/sync",
      "wdio-image-comparison-service"
    ],
    "removeComments": true
  }
}
